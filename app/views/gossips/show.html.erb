<div class="container">
  <div class="card text-center mb-5 mt-5">
  <h5 class="card-header">Gossip number <%= @gossip.id %></h5>
    <div class="card-body">
      <h2 class="card-title mb-5">Title: <%= @gossip.title %></h2>
      <h3 class="card-text mb-5">Content: <%= @gossip.content %></h3>
      <h3 class="card-text mb-5">User name: <%= @gossip.user.first_name %></h3>
      <h3 class="card-text mb-5">City: <%= @gossip.user.city.name %></h3>
      <h3 class="card-text mb-5">Created on: <%= @day %>/<%= @month %>/<%= @year %> à <%= @hour %>h<%= @min %></h3>
      <p><%= link_to "See user's profile", user_path(@gossip.user.id), :class => "btn btn-success" %></p>
      <p><%= link_to "Edit gossip", edit_gossip_path(@gossip.id), :class => "btn btn-primary" %></p>
    </div>
  </div>  
  <p><%= link_to "Retourner à la liste de Potins", root_path, :class => "btn btn-primary" %></p>
</div>
